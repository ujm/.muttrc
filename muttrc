set realname = "後藤鮮明"
set from = "your_name@your.mail.server.tld"
set use_from = yes
set envelope_from = yes

set mbox_type=Maildir
set folder=~/Mail
set spoolfile=+/
set header_cache=~/.cache/mutt

set my_user = "your_name"
set my_pass = "your_password"

set smtp_url = "smtp://$my_user:$my_pass@your.mail.server.tld"
set pop_host = "pops://$my_user:$my_pass@your.mail.server.tld"

set editor="vim"
set pager="less"
